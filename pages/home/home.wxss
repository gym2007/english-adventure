.character {
  position: absolute;
  bottom: 250rpx;
  left: 50%;
  width: 180rpx;
  transform: translateX(-50%);
}

.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  width: 100%;
  height: 130rpx;
  background: #fff;
  border-top: 2rpx solid #ddd;
  justify-content: space-around;
  align-items: center;
  z-index: 999;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
  color: #777;
}

.nav-item.active {
  color: #3b82f6;
  width: 20%;
}

.nav-item image {
  width: 50rpx;
  height: 50rpx;
  z-index: 1;
}

.nav-item.active image {
  width: 100rpx;
  height: 100rpx;
}

.bottom-bg{
  position: absolute;
  height: 70px;
  width: 100%;
  z-index: -10;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.coins-bg, .stars-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}